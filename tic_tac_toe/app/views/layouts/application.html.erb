<!DOCTYPE html>
<html>
<head>
  <title>TicTacToe</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <h1>Login</h1>
  <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div class="actions"><%= submit_tag "Log in" %></div>
  <% end %>

  <% if current_user %>
   <p> hello, <%= current_user.email %> </p>
   <%= link_to 'Logout', session_path(session), method: :delete, data: {confirm: "Are you sure?"} %>
  <% else %>
   <%= link_to 'Please login', login_path %>
  <% end %>

<h1><%= link_to 'Tic Tac Toe', root_path %></h1>

<nav>
  <ul>
    <li><%= link_to 'All Users', users_path %></li>
    <li><%= link_to 'Log In / Register', new_user_path %></li>
    <li><%= link_to 'About', about_path %></li>
    <li><%= link_to 'Play the Game !', game_index_path %></li>
  </ul>
</nav>

<%= yield %>


<footer>
  <ul>
    <li><%= link_to 'All Users', users_path %></li>
    <li><%= link_to 'Log In / Register', new_user_path %></li>
    <li><%= link_to 'About', about_path %></li>
    <li><%= link_to 'Play the Game !', game_index_path %></li>
  </ul>
</footer>

</body>
</html>
